$("ul.errors").html("")
<% if @tag.errors.any? %>
  <% @tag.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  var tagElem = $("#<%=@tag.spec.id%> span.tags");
  $("#spec-modal").modal("hide");
  tagElem.append("<%= j(render partial: "tags/show", object: @tag.to_hash, as: :tag) %>");
  $('#<%=@tag.spec.id%> .<%=@tag.id%> .delete_tag').removeClass('hidden');
<% end %>