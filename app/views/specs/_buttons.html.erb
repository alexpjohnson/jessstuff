<div class="btn-toolbar">
    <span class="btn-group btn-group-xs" role="group">
        <%= link_to spec_bookmark_path(:spec_id => spec[:id]), 
                    method: :post,
                    remote:true, 
                    :data => {:tooltip => 'bookmark', :position => 'bottom', :delay => '20'},
                    class: "tooltipped" do %>
            <i class="material-icons">bookmark</i>
        <% end %>
        <%= link_to '', 
                    new_tag_path(:id => spec[:id]), 
                    remote:true, 
                    :data => {:toggle => "tooltip", :placement => 'bottom', :container => 'body'},
                    class: "btn btn-default fa fa-tag",
                    :title => 'add tag'%>
        <%= link_to '', 
                    new_ticket_path(:id => spec[:id]), 
                    remote: true,
                    :data => {:toggle => "tooltip", :placement => 'bottom', :container => 'body'},
                    :title => 'add ticket',
                    class: "btn btn-default fa fa-ticket" %>
    </span>
    <span class="btn-group btn-group-xs" role="group">
         
        <div class="btn-group btn-group-xs" role="group" data-toggle="tooltip", data-placement="left", data-container="body",
                    title="add relative">
            
            <button type="button" 
                    class="btn btn-default dropdown-toggle fa fa-plus" 
                    data-toggle="dropdown">
            </button>
            <ul class="dropdown-menu">
                <li>
                    <%= link_to '+ parent', 
                                new_spec_path(:id => spec[:id]), 
                                remote: true %>
                </li>
               <% if !spec[:is_bottom] %>
               <li>
                    <%= link_to '+ children', 
                                mass_add_view_specs_path(:id =>spec[:id]),
                                remote:true %>
                </li>
                <% end %>
            </ul>
            
        </div>

        <%= link_to '', 
                    edit_spec_path(:id => spec[:id]), 
                    remote:true, 
                    class: "btn btn-default fa fa-pencil",
                    :data => {:toggle => "tooltip", :placement => 'bottom', :container => 'body'},
                    :title => 'edit'%>
                    
        <% if spec[:can_indent] %>
            <%= link_to '', 
                        spec_indent_url(  :spec_id =>spec[:id]),
                        method: :post,
                        remote:true,
                        :data => {:toggle => "tooltip", :placement => 'bottom', :container => 'body'},
                        :title => 'indent',
                        class: "indent_spec btn btn-default fa fa-indent" %>
        <% end %>
        <% if !(spec[:is_root]==true) %>
            <%= link_to '', 
                    spec_dedent_url(  :spec_id => spec[:id]),
                    method: :post,
                    remote:true,
                    :data => {:toggle => "tooltip", :placement => 'bottom', :container => 'body'},
                    :title => 'dedent',
                    class: "indent_spec btn btn-default fa fa-outdent" %>
        <% end %>
        
        <%= link_to '', 
                    spec_delete_path(:spec_id => spec[:id]),
                    class: "delete_spec btn btn-default fa fa-trash-o",
                    :data => {:toggle => "tooltip", :placement => 'bottom', :container => 'body'},
                    :title => 'delete',
                    :remote => true %>
    </span>
</div>