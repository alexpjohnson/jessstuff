

<!-- Dropdown Structure -->
<ul id="dropdownMenu1" class="dropdown-content">
      <% if current_user.admin? %>
       
        <li><%= link_to users_path, remote: true do %>
            manage users <span class="new badge cyan"><%= @request_count %></span>
            <% end %>
        </li>
        <li class="divider"></li>
    <% end %>
  
    <li><%= link_to('log out', destroy_user_session_path, :method => :delete) %></li>
</ul>

<nav class="deep-purple">
    <div class="nav-wrapper">
        <div class="brand-logo">jessdocs 2.0</div>
        <ul class="right">
            <% if user_signed_in? %>
                <li><%= link_to 'Personal', 
                                    specs_path(:organization_id => 0) %></li>
                <% if @user_organization %>
                    <li class="active">
                        <%= link_to @user_organization.name, 
                                    specs_path(:organization_id => @user_organization.id) %>
                    </li>
                <% end %>
                <li>
                <a class="dropdown-button" href="#!" data-activates="dropdownMenu1">
                    <%= current_user.name? ? current_user.name : current_user.email %><i class="material-icons right">arrow_drop_down</i>
                    <% if current_user.admin? %>
                        <span class="new badge cyan"><%= @request_count %></span>
                    <% end %>
                </a>
                </li>
            <% end %>
        
        </ul>
    </div>  
</nav>  
        

   