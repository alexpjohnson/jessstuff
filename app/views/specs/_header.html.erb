

<!-- Dropdown Structure -->
<ul id="dropdownMenu1" class="dropdown-content">
      <% if current_user.admin? %>
       
        <li><%= link_to users_path, remote: true do %>
            manage users <span class="new badge cyan"><%= @request_count %></span>
            <% end %>
        </li>
        <li><%= link_to "add project", 
                    new_project_path,
                    remote: true %></li>
        <li class="divider"></li>
    <% end %>
  
  <li><%= link_to('log out', destroy_user_session_path, :method => :delete) %></li>
</ul>

<nav class="deep-purple">
    <div class="nav-wrapper">
        <div class="brand-logo">jessdocs 2.0</div>
        <ul class="right">
            <% if user_signed_in? %>
                <li>
                <a class="dropdown-button" href="#!" data-activates="dropdownMenu1">
                    <%= current_user.email %><i class="material-icons right">arrow_drop_down</i>
                    <% if current_user.admin? %>
                        <span class="new badge cyan"><%= @request_count %></span>
                    <% end %>
                </a>
                </li>
            <% end %>
        
        </ul>
    </div>  
</nav>  
        

   