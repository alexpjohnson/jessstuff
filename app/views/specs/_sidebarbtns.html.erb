<% if current_user.can_edit? %>
    <div class="fixed-action-btn horizontal" id="fixedEditBtn" style="bottom: 45px; right: 24px;">
        
        <a href="#" class="btn-floating btn-large cyan">
            <i class="material-icons" id="hamburgerBtn">menu</i>
            <i class="material-icons" id="toTheTopBtn">arrow_upward</i>
        </a>
        
        <ul>
            <li>
                <%= link_to mass_add_view_specs_path(:projects =>{:project_id => @selected_project_id}),
                            remote:true,
                            class: "btn-floating deep-purple tooltipped",
                            data: {position: "top", delay: "20", tooltip: "add specs" } do %>
                    <i class="material-icons">add</i>
                <% end %>
            </li>
            <li>
                <%= link_to tag_types_path,
                            remote:true,
                            class: "btn-floating deep-purple tooltipped",
                            data: {position: "top", delay: "20", tooltip: "tag types" } do %>
                    <i class="material-icons">label</i>
                <% end %>
                
            </li>
        </ul>
    </div>
<% else %>
    <div class="fixed-action-btn horizontal" style="bottom: 45px; right: 24px;">
        <a href="#" class="btn-floating btn-large cyan">
            <i class="material-icons" id="toTheTopBtn">arrow_upward</i>
        </a>
    </div>
<% end %>