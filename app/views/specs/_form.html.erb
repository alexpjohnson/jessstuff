<div class="modal-dialog">
  <div class="modal-content">
    <!--<div class="modal-header">-->
    <!--  <h4 class="modal-title">add new top-level spec</h4>-->
    <!--</div>-->
    <%= form_for @spec, remote: true, html: { class: "form-inline" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group" >
          <%= f.collection_select :spec_type_id, @spec_types, :id, :name, html: { class: "form-control"} %>
       
          <%= f.text_field 'description', html: {class: "form-control", style: "width:1000px" } %>
        </div>
        
        <% if !@parent.nil? %>
            <%= f.hidden_field :parent_id, value: @parent.id %>
        <% end %>
        <% if !@child.nil? %>
            <%= f.hidden_field :child_id, value: @child.id %>
        <% end %>
        
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary", id: "submit" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>