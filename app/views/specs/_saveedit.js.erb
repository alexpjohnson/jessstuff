$("ul.errors").html("");
<% if @spec.errors.any? %>
  <% @spec.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $('#spec-modal').closeModal();

  $('#<%=@spec.id %> .spec-words').html("<%= @spec.description %>");

<% end %>