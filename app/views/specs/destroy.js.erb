$('.delete_spec').bind('ajax:success', function() {
   <% unless has_children %>
      $(this).closest('li').fadeOut();
   <% else %>
      <!--need to handle case where parent has no parents-->
      var deletedListElem = $('.s<%=deleted_id%>.p<%=deleted_parent_id%>');
      var deletedChildren = $('#<%=deleted_id%>children li');
      
      var newListElem = $('#<%=deleted_parent_id%>children ul');
      
      
      $(this).closest('li').fadeOut();
      newListElem.append(deletedChildren);
      $('#<%=deleted_parent_id%> ul li:last').fadeIn('slow');
   <% end %>
});