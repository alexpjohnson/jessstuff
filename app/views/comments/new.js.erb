var parentElem = $('#comment<%=@parent.id%>')
parentElem.removeClass('comment-card-clickable')
parentElem.addClass('comment-card-active')
parentElem.find('.card-content').after('<%= j(render partial: 'form', locals: {parent_id: @parent.id, button_text: 'reply'} ) %>')

$('.cancel-btn').on('click', function() {
    var parentElem = $(this).parents().find('.comment')
    parentElem.find('.comment-btns').show()
    parentElem.find('.comment-form').remove();
    event.preventDefault();
});