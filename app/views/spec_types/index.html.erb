<h1>Listing Spec Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spec_types.each do |spec_type| %>
      <tr>
        <td><%= link_to 'Show', spec_type %></td>
        <td><%= link_to 'Edit', edit_spec_type_path(spec_type) %></td>
        <td><%= link_to 'Destroy', spec_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

