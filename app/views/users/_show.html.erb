<span class="user">
    <h6>
        <span>
            <%= user.email %>
        </span>
        <span>
            <%= user.role.name %>
        </span>
                
        <% unless user==current_user %>
            <span class="btn-group btn-group-xs" role="group">
                <%= link_to edit_user_path(user),
                            remote: true,
                            class: "btn-square" do %>
                    <i class="material-icons">edit</i>
                <% end %>
                <%= link_to user, 
                            method: :delete,
                            class: "delete_user btn-square",
                            :remote => true do %>
                    <i class="material-icons">delete</i>
                <% end %>
            </span>
        <% end %>
    </h6>
</span>