<div id="modal" style="height:250px" class="modal-thin modal modal-fixed-footer fade">
  <%= form_for @ticket, remote: true do |f| %>
  <div class="modal-content">
    
    
      <div class="modal-body">
        
        <h4>associate ticket</h4>
        
        <% if @ticket.errors.any? %>
          <div class="alert alert-danger form-group" role="alert">
            <ul>
            <% @ticket.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
  
        <div>
          
          <%= f.text_field 'name', {class: "validate", placeholder: '#000000000'}%>
          <%= f.hidden_field :spec_id, value: @spec.id %>
        </div>
        
      </div>
      
      
  </div>
  <div class="modal-footer">
      
      <%= f.submit "associate ticket", class: "btn submit-btn"%>
      <%= link_to "cancel", "#", class: "modal-close btn-flat" %>
  </div>
  <% end %>
</div>