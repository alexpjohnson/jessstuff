$("ul.errors").html("")
<% if @ticket.errors.any? %>
  <% @ticket.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  Materialize.toast('ticket associated', 8000)
  var ticketElem = $("#<%=@ticket.spec.id%> span.tickets");
  $('#modal').closeModal();
  ticketElem.append("<%= j(render partial: "tickets/show", object: @ticket.to_hash, as: :ticket) %>");
  $('#<%=@ticket.spec.id%> .delete_tag').css('display', 'inline-block');
<% end %>