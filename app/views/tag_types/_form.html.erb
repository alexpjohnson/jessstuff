<div class="modal-dialog">

  <div class="modal-content">
    
    <%= form_for @tag_type, remote: true do |f| %>
      <div class="modal-body">
        
        <% if @tag_type.errors.any? %>
          <div class="alert alert-danger form-group" role="alert">
            <ul>
            <% @tag_type.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group form-inline">
          
          <%= f.text_field 'name', {class: "form-control", placeholder: 'tag name'}%>
          
          <%= color_field(:tag_type, :color, options={class: "form-control", style:"width:50px"})  %>
        </div>
        
      </div>
      
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>