<p id="notice"><%= notice %></p>

<h1>Tag Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_types.each do |tag_type| %>
      <tr>
        <td>
          <span class="tag" style="background-color:<%= tag_type.color %>">
            <%= tag_type.name %>
          </span>
        </td>
        <td><%= link_to 'Edit', edit_tag_type_path(tag_type) %></td>
        <td><%= link_to 'Destroy', tag_type, method: :delete, data: { confirm: 'Are you sure?' },
                :remote => true, :class => 'delete_tag_type' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

